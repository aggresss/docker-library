# Dockerfile for xxx environment

FROM aggresss/elementary:bionic

MAINTAINER aggresss <aggresss@163.com>
LABEL DOCKER_IMAGE=aggresss/xxx:www
ENV DOCKER_IMAGE=aggresss/xxx:www

# configure environment for xxx
RUN apt-get update && apt-get install -y --no-install-recommends \
    \
    && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/* \
    && \
    echo "[program:yyy]" > /etc/supervisor/conf.d/yyy.conf && \
    echo "command=/usr/sbin/yyy" >> /etc/supervisor/conf.d/yyy.conf

EXPOSE zzz
USER zzz
WORKDIR zzz

